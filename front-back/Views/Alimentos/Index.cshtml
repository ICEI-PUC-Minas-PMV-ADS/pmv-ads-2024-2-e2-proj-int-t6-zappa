@model IEnumerable<front_back.Models.Alimento>

@{
    ViewData["Title"] = "Index";
}

<h1>Adicionar alimento</h1>
<p>
<p>
    <a asp-action="Create" class="btn btn-success">Adicionar alimento</a>
</p>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alimentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alimentos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.AlimentoId">Editar</a> |
                <a class="btn btn-primary" asp-route-id="@item.AlimentoId">Visualizar</a> |
                <a class="btn btn-danger" asp-route-id="@item.AlimentoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
